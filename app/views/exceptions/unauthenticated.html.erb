<h3>Please login</h3>

<div class="info_container">
  <%= error_messages_for session.authentication %>
  <% @login_param = Merb::Authentication::Strategies::Basic::Base.login_param %>
  <% @password_param = Merb::Authentication::Strategies::Basic::Base.password_param %>
  
	<form action="<%= slice_url(:merb_auth_slice_password, :perform_login) %>" method="POST" accept-charset="utf-8">
	  <input type="hidden" name="_method" value="PUT" />
	  <table class="in_place_editing">
	    <tbody>
	      <tr>
	        <td class="field_label"><%= @login_param.to_s.capitalize %>:</td>
	        <td><input type="text" name="<%= @login_param.to_s %>" value="" id="<%= @login_param.to_s %>" /></td>
	      </tr>
	      <tr>
	        <td class="field_label"><%= @password_param.to_s.capitalize %>:</td>
	        <td><input type="password" name="<%= @password_param.to_s %>" value="" id="<%= @password_param.to_s %>" /></td>
	      </tr>
	      <tr colspan="2">
	        <td><input type="submit" name="Submit" value="Log In" id="Submit" /></td>
	      </tr>
	    </tbody>
	  </table>
	</form>
</div>