<%= error_messages_for @user %>
<%= form_for @user, :action => url(:user, @user), :method => :put do %>
  <p>
    <%= text_field :name, :label => "Name" %>
  </p>
  <p>
    <%= text_field :login, :label => "Login" %>
  </p>
  <p>
    <%= text_field :email, :label => "Email" %>
  </p>
  <p>
    <%= password_field :password, :label => "Password" %>
  </p>
  <p>
    <%= password_field :password_confirmation, :label => "Password Confirmation" %>
  </p>
  <p>
	  <%= select :time_zone, :label => "Timezone", :collection => get_timezones, :selected => @user.time_zone %>
  </p>
  <p>
    <%= select :default_formatter, :label => "Default Formatter", :collection => Hooks::Formatters.available_formatters, :selected => @user.default_formatter %>
  </p>
  <p>
    <%= submit "Update" %> or <%= link_to('Cancel', url(:users)) %>
  </p>
<% end =%>
