<%= error_messages_for @user %>
<% form_for @user, :action => url(:user, @user), :method => :put do %>
  <p>
    <%= text_control :name, :label => "Name" %>
  </p>
  <p>
    <%= text_control :login, :label => "Login" %>
  </p>
  <p>
    <%= text_control :email, :label => "Email" %>
  </p>
  <p>
    <%= password_control :password, :label => "Password" %>
  </p>
  <p>
    <%= password_control :password_confirmation, :label => "Password Confirmation" %>
  </p>
  <p>
	  <%= select_control :time_zone, :label => "Timezone", :collection => get_timezones, :selected => @user.time_zone %>
  </p>
  <p>
    <%= select_control :default_formatter, :label => "Default Formatter", :collection => Hooks::Formatters.available_formatters, :selected => @user.default_formatter %>
  </p>
  <p>
    <%= submit_button "Update" %> or <%= link_to('Cancel', url(:users)) %>
  </p>
<% end %>